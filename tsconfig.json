{
  "compilerOptions": {
    /* Configuración del lenguaje */
    "target": "ES2020", // Versión de JavaScript de salida
    "module": "commonjs", // Sistema de módulos para Node.js
    "lib": ["ES2020"], // Librerías TypeScript a incluir
    "esModuleInterop": true, // Permite imports de módulos CommonJS como ES6
    "allowSyntheticDefaultImports": true, // Permite imports por defecto de módulos sin export default

    /* Configuración de salida */
    "outDir": "./dist", // Directorio de salida para archivos compilados
    "rootDir": "./src", // Directorio raíz de archivos fuente
    "removeComments": true, // Elimina comentarios en la compilación

    /* Configuración de tipos */
    "strict": true, // Habilita todas las verificaciones estrictas
    "noImplicitAny": true, // Error en expresiones y declaraciones con tipo 'any' implícito
    "strictNullChecks": true, // Habilita verificaciones estrictas de null y undefined
    "strictFunctionTypes": true, // Habilita verificaciones estrictas de tipos de función
    "strictPropertyInitialization": true, // Asegura que las propiedades de clase se inicialicen
    "noUnusedLocals": true, // Reporta variables locales no usadas
    "noUnusedParameters": true, // Reporta parámetros no usados
    "noImplicitReturns": true, // Reporta funciones que no retornan explícitamente
    "noFallthroughCasesInSwitch": true, // Reporta casos de switch sin break

    /* Configuración de resolución de módulos */
    "moduleResolution": "node", // Usa estrategia de resolución de Node.js
    "resolveJsonModule": true, // Permite importar archivos .json
    "skipLibCheck": true, // Omite verificación de tipos en archivos .d.ts
    "forceConsistentCasingInFileNames": true, // Asegura consistencia en mayúsculas/minúsculas

    /* Configuración de decoradores y experimental */
    "experimentalDecorators": true, // Habilita decoradores experimentales
    "emitDecoratorMetadata": true // Emite metadata de diseño para decoradores
  },
  "include": [
    "src/**/*" // Incluye todos los archivos en src/
  ],
  "exclude": [
    "node_modules", // Excluye node_modules
    "dist" // Excluye directorio de compilación
  ]
}
